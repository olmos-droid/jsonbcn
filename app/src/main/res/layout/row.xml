<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/textView_textadreca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AdreÃ§a:"
            app:layout_constraintBottom_toTopOf="@+id/textView_textLongitud"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="27dp" />

        <TextView
            android:id="@+id/textView_textLatitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitud"
            app:layout_constraintBottom_toTopOf="@+id/textViewEquip"
            app:layout_constraintEnd_toEndOf="@+id/textView_textLongitud"
            app:layout_constraintTop_toBottomOf="@+id/textView_textLongitud" />

        <TextView
            android:id="@+id/textView_textLongitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitud:"
            app:layout_constraintBottom_toTopOf="@+id/textView_textLatitud"
            app:layout_constraintEnd_toEndOf="@+id/textView_textadreca"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_textadreca" />

        <TextView
            android:id="@+id/textViewEquip"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="equip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView_textLongitud"
            app:layout_constraintTop_toBottomOf="@+id/textView_textLatitud" />

        <TextView
            android:id="@+id/textViewAdreca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView_textadreca"
            app:layout_constraintStart_toEndOf="@+id/textView_textadreca"
            app:layout_constraintTop_toTopOf="@+id/textView_textadreca" />

        <TextView
            android:id="@+id/textViewLongitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView_textLongitud"
            app:layout_constraintStart_toEndOf="@+id/textView_textLongitud"
            app:layout_constraintTop_toTopOf="@+id/textView_textLongitud"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textViewLatitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView_textLatitud"
            app:layout_constraintStart_toEndOf="@+id/textView_textLatitud"
            app:layout_constraintTop_toTopOf="@+id/textView_textLatitud" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>